    <h2>Left to do: <%= left %></h2>
    <h3>Add a Todo:</h3>
    <form action="/addTodo" method="post">
        <datalist id="tags-list">
            <% for(let j=0;j<tags.length;j++){ %>
                <option value=<%= tags[j] %>></option>
            <% } %> 
        </datalist>
        <input type="text" placeholder="Task" name="todoItem">
        <input type="text" placeholder="Tag" name="tagItem" list="tags-list">
        <input type="submit">
    </form>

    <script src="js/main.js"></script>
  </body>
</html>
