    <!-- <h2>Left to do: <%= left %></h2> -->
    <footer>
        <!-- <h3>Add a Todo:</h3> -->
        <!-- <h2 class="title">TODO: <%= left %>  </h2> -->
        <form action="/addTodo" method="post">
            <datalist id="tags-list">
                <% for(let j=0;j<tags.length;j++){ %>
                    <option value=<%= tags[j] %>></option>
                <% } %> 
            </datalist>
            <input class="task-input" type="text" placeholder="Task" name="todoItem">
            <input class="tag-input" type="text" placeholder="Tag" name="tagItem" list="tags-list">
            <input class="form-button" type="submit">
        </form>
    </footer>
    <div class="background">
        <h2 class="background-text"><span><%= left %></span></h2>
        <!-- <h2 class="background-text">TODO: <%= left %>  </h2>
        <h2 class="background-text">COMPLETED: <%= left %>  </h2> -->
    </div>

    <script src="js/main.js"></script>
  </body>
</html>
